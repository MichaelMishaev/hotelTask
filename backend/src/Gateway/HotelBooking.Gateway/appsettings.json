{
  "Urls": "http://+:5010",
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "booking-api": {
        "ClusterId": "booking-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          { "RequestHeadersCopy": "true" },
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "swagger": {
        "ClusterId": "booking-cluster",
        "Match": {
          "Path": "/swagger/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "booking-cluster": {
        "Destinations": {
          "booking-api": {
            "Address": "http://backend:5000"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Path": "/api/health"
          }
        }
      }
    }
  }
}
